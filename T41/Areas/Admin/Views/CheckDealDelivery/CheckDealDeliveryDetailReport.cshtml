    //Phần JS gọi đến dữ liệu của chi tiết người dùng
    function detail_user_search() {
        
        $.ajax({
            type: "POST",
            url: '@Url.Action("ListCheckDealDelivery_Report", "CheckDealDelivery")',
            beforeSend: function () {
                $('.loading-element').removeClass("hide");
            },
            dataType: 'json',
            data:
                {
                    fromdate: $('#fromdate').val(),
                    todate: $('#fromdate').val(),
                    ma_bc_khai_thac: $('#posoffice').val(),

                },
            success: function (data) {
                
                var str_html = "";
                var str_body = "";
                var a = 1;
                $.each(data.ListCheckDealDelivery_Report, function (i, item) {
                    str_body += '<tr>';
                    str_body += '<td class="text-center">' + a++ + '</td>';
                    
                    str_body += '<td class="text-center">' + data.ListCheckDealDelivery_Report[i].MA_E1 + '</td>';
                    str_body += '<td class="text-right">' + data.ListCheckDealDelivery_Report[i].MA_BC_KHAI_THAC + '</td>';
                    str_body += '<td class="text-right">' + data.ListCheckDealDelivery_Report[i].MA_BC_PHAT + '</td>';
                    str_body += '<td class="text-right">' + data.ListCheckDealDelivery_Report[i].NGAY_PHAT + '</td>';
                    str_body += '<td class="text-right">' + data.ListCheckDealDelivery_Report[i].GIO_PHAT + '</td>';
                    
                    str_body += '<td class="text-left">' + data.ListCheckDealDelivery_Report[i].NGUOI_PHAT + '</td>';
                    str_body += '<td class="text-left">' + data.ListCheckDealDelivery_Report[i].NGUOI_NHAN + '</td>';

                    str_body += '<td class="text-left">' + data.ListCheckDealDelivery_Report[i].KHOI_LUONG + '</td>';
                    str_body += '<td class="text-left">' + data.ListCheckDealDelivery_Report[i].MA_LY_DO + '</td>';
                    str_body += '<td class="text-left">' + data.ListCheckDealDelivery_Report[i].MA_XU_LY + '</td>';

                    str_body += '</tr>';
                });
                
                document.getElementById("tongsobaophattruyen").innerHTML = "<strong> Tổng số báo phát truyền: " +  data.CheckDealDelivery_Total.TONG_SO_BAO_PHAT_TRUYEN + "</strong>";
                document.getElementById("tongsomae1truyen").innerHTML = "<strong> Tổng số mã e1 truyền: " +  data.CheckDealDelivery_Total.TONG_SO_MA_E1_TRUYEN + "</strong>";
                document.getElementById("tongsobaophatdoisoat").innerHTML = "<strong> Tổng số báo phát đối soát: " +  data.CheckDealDelivery_Total.TONG_SO_BAO_PHAT_DOI_SOAT + "</strong>";
                document.getElementById("tongsomae1doisoat").innerHTML = "<strong> Tổng số mã e1 đối soát: " +  data.CheckDealDelivery_Total.TONG_SO_MA_E1_DOI_SOAT + "</strong>";

                str_html += str_body;

                
                if (data.Code == '01' || data.Code == '99') {
                    $('.loading-element').addClass("hide");
                    $('.list_user tr').empty();
                    swal(
                      data.Message,
                      '',
                      'error'
                    );
                    
                    
                }
                else {
                    $('.loading-element').addClass("hide");
                    $('#box-1').removeClass("hide");
                    $('#box-2').removeClass("hide");
                    $('#box-3').removeClass("hide");
                    $('#box-4').removeClass("hide");
                    
                    //Kiểm tra xem class myTable có phải là Datatable hay k
                    if (!$.fn.dataTable.isDataTable('.myTable')) {
                        $('.list_user tr').empty();
                        $('.list_user').html(str_html);
                        table = $('.myTable').DataTable({
                             ordering: false,
                             info: false,
                             language: {
                                        "lengthMenu": "Hiển thị _MENU_ bản ghi",
                                        "zeroRecords": "Không có dữ liệu !",
                                        "info": "Hiển thị trang _PAGE_ đến _PAGES_",
                                        "infoEmpty": "Không tồn tại bản ghi !",
                                        "search": "Nhập mã E1:",
                                        "infoFiltered": "(Tìm kiếm trong _MAX_ bản ghi)",
                                        "paginate": {
                                            "next": "Trang sau",
                                            "previous": "Trang trước"
                                        }
                             }
                        });
                    }
                    // destroy class myTable sau đó mới gọi lại class 
                    else {
                        
                        $(".myTable").dataTable().fnDestroy();
                        $('.list_user').html(str_html);
                        table = $('.myTable').DataTable({
                            ordering: false,
                            info: false,
                            language: {
                                "lengthMenu": "Hiển thị _MENU_ bản ghi",
                                "zeroRecords": "Không có dữ liệu !",
                                "info": "Hiển thị trang _PAGE_ đến _PAGES_",
                                "infoEmpty": "Không tồn tại bản ghi !",
                                "search": "Nhập mã E1:",
                                "infoFiltered": "(Tìm kiếm trong _MAX_ bản ghi)",
                                "paginate": {
                                    "next": "Trang sau",
                                    "previous": "Trang trước"
                                }
                            }
                        });
                    }

                    
                }
            }
        })
    }



