                    fromdate: fromdate,
                    todate: todate,
                    vung: vung,
                    cap: cap,
                    loaipt: loaipt,
                    mailroutecode: mailroutecode,

                },
            success: function (result) {
                $('.loading-element').hide();
                $('#listroadwaytransport1').html(result);

            }
        })
    }

    
