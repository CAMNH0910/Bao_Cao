<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

<script type="text/javascript">
   

    var chart1, chart2, chart4, chart5, chart6, chart7, chart8, chart9, chart10, chart11, chart12, chart13, chart14, chart15
       , chart16, chart17, chart18, chart19, chart20, chart21, chart22, chart23, chart24, chart25, chart26, chart27, chart28;
    $(document).ready(function () {

        var d = new Date();
        var currMonth = d.getMonth();
        var currYear = d.getFullYear();
        var startDate = new Date(currYear, currMonth, 1);


        $("#fromdate").datepicker({
            dateFormat: "dd/mm/yyyy",
            todayHighlight: true
        }).datepicker("setDate", startDate);

        $("#todate").datepicker({
            dateFormat: "dd/mm/yyyy",
            todayHighlight: true
        }).datepicker("setDate", "0");


        $('.loading-element').hide();
        $('.box-footer').hide();
        $('#btnexportlist').hide();
    });

    //Phần Xuất Excel của bảng tổng hợp

  


  
    
    

    $("#btnreport").click(function () {
        
        // goi ham Detail
        $("#listkpithdvreport tr").remove();
        detail();
        $('.box-footer').show();

        
    });


    //Phần chi tiết của bảng tổng hợp sản lượng đi phát
    function detail(p) {
        $.ajax({
            url: '@Url.Action("ListDetailedQualityE1TNReport", "ReportTHE1TN")',
            beforeSend: function () {
                $('.loading-element').show();
            },
            method: 'GET',
            dataType: 'html',
            data:
                {
                    type: $("#type").val(),
                    startdate: $('#fromdate').val(),
                    enddate: $('#todate').val(),
                    donvi: $("#donvi").val(),
                    tinhnhan: $("#tinhnhan").val(),
                    dichvu: $("#dichvu").val(),                  
                    khachhang: $("#khachhang").val()
                },
            success: function (result) {
              // console.log(result);
                $('.loading-element').hide();
                $('#listkpithdvreport').html(result);
                $('#btnexportlist').show();

            }
        })
    }
   
    $('#btnexportlist').click(function () {
        // build the url
        var url = $(this).data('baseurl') + '?tinhnhan=' + $('#tinhnhan').val() + '&donvi=' + $('#donvi').val() + '&dichvu=' + $('#dichvu').val() + '&khachhang=' + $('#khachhang').val() + '&startdate=' + $('#fromdate').val() + '&enddate=' + $('#todate').val();
        // redirect
        location.href = url;
    });

    $.getJSON("/ReportTHE1TN/TINHNHAN", function (data) {
        $('#tinhnhan').html(data);
    })
    
    $.getJSON("/ReportTHE1TN/DICHVU", function (data) {
        $('#dichvu').html(data);
    })


    
</script>


