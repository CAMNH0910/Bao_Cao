@model T41.Areas.Admin.Model.DataModel.ChangePasswordModel

<h2>Đổi Mật Khẩu</h2>

@using (Html.BeginForm("ChangePassword", "Administrators", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, "Mật khẩu cũ", new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            <!-- Điều chỉnh độ rộng của ô nhập -->
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, "Mật khẩu mới", new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            <!-- Điều chỉnh độ rộng của ô nhập -->
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, "Xác nhận mật khẩu mới", new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            <!-- Điều chỉnh độ rộng của ô nhập -->
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <input type="submit" value="Đổi Mật Khẩu" class="btn btn-primary" />
        </div>
    </div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })


<style>
    /* Thu gọn độ dài các ô nhập */
    .form-control-sm {
        width: 100%; /* Điều chỉnh ô nhập chiếm hết chiều rộng của col */
        max-width: 800px; /* Đặt chiều dài tối đa */
    }

    /* Điều chỉnh khoảng cách giữa các trường */
    .form-group {
        margin-bottom: 10px; /* Giảm khoảng cách giữa các trường */
        text-align: left; /* Căn lề trái cho tất cả các phần tử trong form */
    }

    /* Tinh chỉnh nút submit */
    .btn-primary {
        width: 20%; /* Nút chiếm 100% chiều rộng */
        padding: 10px; /* Đảm bảo nút đủ rộng */
    }
    /* Căn lề trái cho ô nhập */
    .form-control {
        text-align: left; /* Căn lề trái cho nội dung của ô nhập */
    }

    /* Căn lề trái cho nhãn (labels) */
    .control-label {
        text-align: left; /* Căn lề trái cho nhãn */
    }
</style>