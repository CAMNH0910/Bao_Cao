<script type="text/javascript">

    $(document).ready(function () {

        var d = new Date();
        var currMonth = d.getMonth();
        var currYear = d.getFullYear();
        var startDate = new Date(currYear, currMonth, 1);


        $("#fromdate").datepicker({
            dateFormat: "dd/mm/yyyy",
            todayHighlight: true
        }).datepicker("setDate", "0");

        $("#todate").datepicker({
            dateFormat: "dd/mm/yyyy",
            todayHighlight: true
        }).datepicker("setDate", "0");


        $('.loading-element').hide();
        $('.box-footer').hide();
        $('#btnexportlist').hide();
       // detail();
    });

    //Phần Xuất Excel của bảng tổng hợp

    $("#btnreport").click(function () {

        // goi ham Detail
        $("#listkpithdvreport tr").remove();
        detail();
        $('.box-footer').show();


    });


    //Phần chi tiết của bảng tổng hợp sản lượng đi phát

    //Phần function detail_account
    function detail() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("ListKTHTReport", "KPIKT")',
            beforeSend: function () {
                $('.loading-element').show();
            },
            dataType: 'json',
            data:
                {
                    startdate: $('#fromdate').val(),
                    enddate: $('#todate').val(),
                    buucuc: $("#buucuc").val(),
                },
            success: function (data) {
                var str_html = "";
                var str_body = "";
                var a = 1;
                $.each(data.LisKPI_KTHT, function (i, item) {
                    str_body += '<tr>';
                    str_body += '<td class="text-center">' + a++ + '</td>';
                    str_body += '<td class="text-center">' + data.LisKPI_KTHT[i].Id_Hanh_Trinh + '</td>';
                    str_body += '<td  style="width:500px;" >' + data.LisKPI_KTHT[i].TEN_HANH_TRINH + '</td>';
                    str_body += '<td class="text-center">' + data.LisKPI_KTHT[i].THOI_GIAN_DI + '</td>';
                    //str_body += '<td class="text-center">' + data.LisKPI_KTHT[i].San_Luong + '</td>';
                    str_body += '<td class="text-center"><a href="/Admin/KPIKT/KPI_KTHT_CT?startdate=' + $('#fromdate').val() + '&enddate=' + $('#todate').val() + '&buucuc=' + $('#buucuc').val() + '&id_hanh_trinh=' + item.Id_Hanh_Trinh + '&time=' + item.THOI_GIAN_DI + ' "target="_blank"">' + data.LisKPI_KTHT[i].San_Luong + '</a> </td>';
                    str_body += '<td class="text-center"><a href="/Admin/KPIKT/KPI_KTHT_TC?startdate=' + $('#fromdate').val() + '&enddate=' + $('#todate').val() + '&buucuc=' + $('#buucuc').val() + '&id_hanh_trinh=' + item.Id_Hanh_Trinh + '&time=' + item.THOI_GIAN_DI + ' "target="_blank"">' + data.LisKPI_KTHT[i].San_Luong_TC + '</a> </td>';
                    str_body += '</tr>';
                });
                str_html += str_body;


                if (data.Code == '01' || data.Code == '99') {
                    $('.loading-element').hide();
                    swal.fire(
                      data.Message,
                      '',
                      'error'
                    );

                }
                else {
                    $("#TableAccount").dataTable().fnDestroy();
                    $('#listkpithdvreport').html(str_html);
                    $('.loading-element').hide();
                    $('#btnexportlist').show();
                    //$('#TableAccount').DataTable()
                        
                    

                }
            }
        })

    }



    $('#btnexportlist').click(function () {
        // build the url
        var url = $(this).data('baseurl') + '?startdate=' + $('#fromdate').val() + '&enddate=' + $('#todate').val() +'&buucuc=' + $('#buucuc').val() ;
        // redirect
        location.href = url;
    });




</script>


