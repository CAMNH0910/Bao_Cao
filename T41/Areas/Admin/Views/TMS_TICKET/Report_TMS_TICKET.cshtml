                            <td style="width: 5%;" class="text-center">${data.ListTICKET[i].So_Tien}</td>
                            <td style="width: 5%;" class="text-center">${data.ListTICKET[i].Tinh_Nhan}</td>
                            <td style="width: 5%;" class="text-center">${data.ListTICKET[i].Tinh_Tra}</td>
                            <td style="width: 5%;" class="text-center">${data.ListTICKET[i].TEN_NV}</td>
                        </tr>`;

                });
                str_html += str_body;
                if (data.Code == '01' || data.Code == '99') {
                    $('.loading-element').hide();
                    swal.fire(
                      data.Message,
                      '',
                      'error'
                    );
                }
                else {

                    $("#TableAccount").dataTable().fnDestroy();
                    $('#listkpithdvreport').html(str_html);
                    $('.loading-element').hide();
                    $('#btnexportlist').show();
                    $('#TableAccount').DataTable({
