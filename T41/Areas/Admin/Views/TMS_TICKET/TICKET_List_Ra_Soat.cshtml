    //Phần chi tiết của bảng tổng hợp sản lượng đi phát
   function detail() {
    $.ajax({
        type: "POST",
        url: '@Url.Action("List_Ra_Soat", "TMS_TICKET")',
        beforeSend: function () {
            $('.loading-element').show();
        },
        dataType: 'json',
        data: {
            startdate: $('#fromdate').val(),
            enddate: $('#todate').val(),
            user: $('#user').val(),
        },
        success: function (data) {
            var str_html = "";
            var str_body = "";
            var a = 1;
            $.each(data.ListL_Ra_Soat, function (i, item) {
                str_body += '<tr>';
                str_body += '<td width="10" class="text-center">' + a++ + '</td>';
                str_body += '<td class="text-center">' + data.ListL_Ra_Soat[i].Ngay + '</td>';
                str_body += '<td class="text-center">' + data.ListL_Ra_Soat[i].LUOT + '</td>';
                str_body += '<td class="text-center">' + data.ListL_Ra_Soat[i].Thoi_Gian + '</td>';
                str_body += '<td class="text-center">' + data.ListL_Ra_Soat[i].TimeImport + '</td>';
                str_body += '<td class="text-center">' + data.ListL_Ra_Soat[i].Tong_So + '</td>';
                str_body += '<td class="text-center">' + data.ListL_Ra_Soat[i].So_HS + '</td>';
                str_body += '<td class="text-center">' + data.ListL_Ra_Soat[i].USERS + '</td>';
                str_body += '<td class="text-center">' + data.ListL_Ra_Soat[i].USERS_IMPORT + '</td>';
                str_body += '</tr>';
            });
            str_html += str_body;

            // Nếu có lỗi từ server
            if (data.Code == '01' || data.Code == '99') {
                $('.loading-element').hide();
                swal.fire(data.Message, '', 'error');
            } else {
                $("#TableAccount").dataTable().fnDestroy();
                $('#listkpithdvreport').html(str_html);
                $('.loading-element').hide();
                $('#btnexportlist').show();
                $('#TableAccount').DataTable({
                    "ordering": false,
                    "scrollX": true,
                    "language": {
                        "processing": "Message khi đang tải dữ liệu",
                        "search": "Tìm kiếm theo từ khóa:",
                        "lengthMenu": "Điều chỉnh số lượng bản ghi trên 1 trang _MENU_ Tổng số: " + data.ListL_Ra_Soat.length + " bản ghi",
                        "zeroRecords": "Không có dữ liệu !",
                        "info": "Hiển thị trang _PAGE_ đến _PAGES_",
                        "infoEmpty": "Không tồn tại bản ghi !",
                        "paginate": {
                            "first": "Trang đầu",
                            "previous": "Trang trước",
                            "next": "Trang sau",
                            "last": "Trang cuối"
                        }
                    }
                });
            }
        }
    })
}
    $('#btnexportlist').click(function () {
