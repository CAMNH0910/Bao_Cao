    function detail_headertrackingorder() {
        $.ajax({
            url: '@Url.Action("ListDetailedHeaderTrackingOrderReport", "TrackingOrder")',
            beforeSend: function () {
                $('.loading-element').show();
            },
            dataType: 'html',
            data:
