                url: "/PostmanDelivery/RouteCode",
                dataType: "json",
                data: { endpostcode: $("#endpostcode").val() },
                success: function (data) {
                    $('#routecode').html('<option value=0>Chọn tuyến phát </option>');
                    jQuery.each(data, function (i, val) {
                        $('#routecode').html($('#routecode').html() +
