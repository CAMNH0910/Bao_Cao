<title>Báo cáo thu gom</title>
<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Báo cáo thu gom</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Báo Cáo</label>
                        <select class="form-control select2" style="width: 100%;" id="channel">
                            <option selected="selected" value="0">Tổng Hợp</option>
                        </select>
                    </div>
                    <!-- /.form-group -->
                    <div class="form-group">
                        <label>Khoảng thời gian</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control pull-right" id="reservation">
                        </div>
                        <!-- /.input group -->
                    </div>
                    <!-- /.form-group -->
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Tỉnh Đóng</label>
                        <select class="form-control select2" style="width: 100%;" id="tinhdong">
                            <option selected="selected" value="0">Tất cả</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Tỉnh Nhận</label>
                        <select class="form-control select2" style="width: 100%;" id="tinhnhan">
                            <option selected="selected" value="0">Tất cả</option>
                        </select>
                    </div>
                    <!-- /.form-group -->
                    <!-- /.form-group -->
                    
                </div>
                <!-- /.col -->
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Bưu Cục Đóng</label>
                        <select class="form-control select2" style="width: 100%;" id="buucucdong">
                            <option selected="selected" value="0">Tất cả</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Bưu Cục Nhận</label>
                        <select class="form-control select2" style="width: 100%;" id="buucucnhan">
                            <option selected="selected" value="0">Tất cả</option>
                        </select>
                    </div>
                    <!-- /.form-group -->
                    <!-- /.form-group -->

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-md-4">
                    <button type="button" class="btn btn-default btn-lrg ajax" id="btnreport">Hiển Thị</button>
                </div>
            </div>
            <div class="box-header">
                <h3 class="box-title">Báo Cáo Tổng Hợp Hành Trình Thu Gom Bưu Gửi EMS Theo Tỉnh</h3>
            </div>
            <div style="overflow-x:auto;">
                <table id="example1" class="table table-bordered table-hover">
                    <thead>
                        <tr class="bg-light-blue color-palette">
                            <th>STT</th>
                            <th>Mã Tỉnh Đóng</th>
                            <th>Tên Tỉnh Đóng</th>
                            <th>Mã Tỉnh Nhận</th>
                            <th>Tên Tỉnh Nhận</th>
                            <th>SL Chấp Nhận</th>
                            <th>SL Leg 1.1</th>
                            <th>TL Leg 1.1</th>
                            <th>SL Leg 1.2</th>
                            <th>TL Leg 1.2</th>
                            <th>Tổng TGBQ</th>

                        </tr>
                    </thead>
                    <tbody id="listcollect"></tbody>
                </table>
            </div>
            
            
        </div>
    </div>


        <!-- /.box-body -->





</section>



