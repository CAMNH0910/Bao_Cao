<title>Cập nhật trạng thái phát</title>
<section class="content-header">
    <h1>
        <small>Báo Cáo </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Cập nhật trạng thái phát theo file</li>
    </ol>
</section>
<section class="content">

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Cập nhật trạng thái phát theo file</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
            </div>
        </div>
                @using (Html.BeginForm("UploadExcel", "DeliveryImport", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return myFunction()" }))
                {
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="control-label col-md-2">Tải File mẫu:</div>
                            <div class="col-md-10">
                                <a href="https://docs.google.com/spreadsheets/d/1fxTpk8CbL7dR-CB5YBPsNuUNRlA0MaiB/edit?usp=sharing&ouid=111467436547315130127&rtpof=true&sd=true"><img src="/Areas/Doc/Excel.png" width="25" height="25" title="Download Excel format" alt="excel" /></a>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-2">Upload File:</div>
                            <div class="col-md-10">
                                <input type="file" id="FileUpload" name="FileUpload" class="" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Upload" id="btnSubmit" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }

        </div>
     

    </div>


    <!-- /.box-body -->



</section>

}  